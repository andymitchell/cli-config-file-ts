{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "verbatimModuleSyntax": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "lib": [
            "ESNext"
        ]
    },
    "include": [
        "./src",
        "./tests"
    ]
}